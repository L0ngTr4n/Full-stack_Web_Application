                                <p class="d-none d-md-block mb-0">Add Product</p>
                            </a>
                        </div>
                    </div>
                    <!-- Center elements -->

                    <!-- Right elements -->
                    <div class="col-lg-5 col-md-12 col-12">
                        <div class="input-group float-center">
                            <div class="form-outline">
                                <input type="search" id="form1" class="form-control" placeholder="Search" />
                            </div>
                            <button type="button" class="btn btn-primary shadow-0">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                    <!-- Right elements -->
                </div>
            </div>
        </div>
        <!-- Jumbotron -->
    </header>
    <main>
        <!-- Products -->
        <section>
            <div class="container my-5">
                <header class="mb-4">
                    <h3>My Product</h3>
                </header>
                <div class="row" id="product-list">
                    <!-- product post here-->
                </div>
            </div>
        </section>
        <!-- Products -->
        <!-- Add Products -->
        <section>
            <div class="container my-5">
                <header class="mb-4">
                    <h3>Add Product</h3>
                </header>
                <div class="row" id="add-product">
                    <form id="product-form">
                        <div class="mb-3">
                            <label for="title" class="form-label">Product Title</label>
                            <input type="text" class="form-control" id="title" required>
                        </div>
                        <div class="mb-3">
                            <label for="price" class="form-label">Product Price</label>
                            <input type="text" class="form-control" id="price" required>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Image URL</label>
                            <input type="text" class="form-control" id="image" required>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Quanity</label>
                            <input type="text" class="form-control" id="quantity" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Add Product</button>
                    </form>
                </div>
            </div>
        </section>
        <!-- Edit Product Modal -->
        <div id="edit-product-modal" class="modal">
            <div class="modal-content">
                <span class="close" onclick="closeEditModal()">&times;</span>
                <h2>Edit Product</h2>
                <form id="edit-product-form">
                    <div class="mb-3">
                        <label for="edited-title" class="form-label">Product Title</label>
                        <input type="text" class="form-control" id="edited-title" required>
                    </div>
                    <div class="mb-3">
                        <label for="edited-price" class="form-label">Product Price</label>
                        <input type="text" class="form-control" id="edited-price" required>
                    </div>
                    <div class="mb-3">
                        <label for="edited-image" class="form-label">Image URL</label>
                        <input type="text" class="form-control" id="edited-image" required>
                    </div>
                    <div class="mb-3">
                        <label for="edited-quantity" class="form-label">Quantity</label>
                        <input type="text" class="form-control" id="edited-quantity" required>
                    </div>
                    <input type="hidden" id="product-index-to-edit">
                    <button id="save-changes-button" class="btn btn-primary" onclick="saveChanges()">Save Changes</button>
                </form>
            </div>
        </div>
        <!-- Add Products -->
        <%- include('footer.ejs') %>
            <!-- Custom scripts -->
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
            <script src="js/vendor.js"></script>
