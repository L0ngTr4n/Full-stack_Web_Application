<body>
    <header>
        <!-- Jumbotron -->
        <div class="p-3 text-center bg-white border-bottom">
            <div class="container">
                <div class="row gy-3">
                    <!-- Left elements -->
                    <div class="col-lg-2 col-sm-4 col-4">
                        <a href="customer" class="float-start">
                            <img src="/img/Logo.png" id="Logo" alt="Logo">
                          </a>
                    </div>
                    <!-- Left elements -->

                    <!-- Center elements -->
                    <div class="order-lg-last col-lg-5 col-sm-8 col-8">
                        <div class="d-flex float-end">
                            <div class="dropdown" id="profile-dropdown">
                                <a class="me-1 border rounded py-1 px-3 nav-link d-flex align-items-center"
                                    id="dropdown-trigger">
                                    <i class="fas fa-user-alt m-1 me-md-2"></i>
                                    <p class="d-none d-md-block mb-0">Profile</p>
                                </a>
                                <div class="dropdown-menu" aria-labelledby="dropdown-trigger">
                                    <a href="\login" class="dropdown-item" target="_blank">View my profile</a>
                                    <a href="/login" class="dropdown-item" target="_blank">Logout</a>
                                    <!-- Add more dropdown items here :3 -->
                                </div>
                            </div>
                            <a href="https://github.com/mdbootstrap/bootstrap-material-design"
                                class="me-1 border rounded py-1 px-3 nav-link d-flex align-items-center"
                                target="_blank"> <i class="fas fa-database m-1 me-md-2"></i>
                                <p class="d-none d-md-block mb-0">My Product</p>
                            </a>
                            <a href="https://github.com/mdbootstrap/bootstrap-material-design"
